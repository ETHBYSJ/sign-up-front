.nav_main
  line-height: 64px
  background-color: #064b80
  .nav_container
    position relative
    .nav_wapper
      width 960px
      margin 0 auto
      overflow: auto
      img 
        height 44px
        width 44px
        float left
        position relative
        top 10px
      h2 
        color: white
        margin-left 14px
        float left
      .login_btn
        float right
        background-color: white
        color: #064b80
        height 36px
        width 60px
        position: relative
        top 14px
        border-radius: 6px
        line-height: 36px
        text-align: center
        font-size: 17px
        letter-spacing: 1px
        font-weight: bold
        cursor pointer
        &:hover
          opacity: 0.8
.nav_main
  line-height: 64px
  background-color: #064b80
  .nav_container
    position relative
    .nav_wapper
      margin 0 auto
      overflow: auto
      width 900px
      .logo_img
        margin-left 14px
        height 44px
        width 44px
        float left
        position relative
        top 10px
      h2 
        color: white
        margin-left 14px
        float left
        @media screen and (max-width 1000px)
          font-size 22px
    .login_btn
      position: absolute
      right 34px
      top 14px
      background-color: white
      color: #064b80
      height 36px
      width 60px
      border-radius: 6px
      line-height: 36px
      text-align: center
      font-size: 17px
      letter-spacing: 1px
      font-weight: bold
      cursor pointer

      &:hover
        opacity: 0.8
    .login_name
      position: absolute
      right 14px 
      top 0
      width 80px
      font-size: 17px
      font-weight: bold
      color white
      text-align: center
      float right
      cursor pointer
      .user_img 
        height 20px
        width 20px
        margin-right: 4px
        position relative
        top -1px
        &:hover
          opacity: 0.8
        
.index_main
  height 100%      
  display: flex
  flex-flow: column
  background-color: #ebebeb
  .index_container
    position relative
    flex 1
    .index_wapper
      height: 100% 
      width: 900px
      margin: 0 auto
      padding-top 24px
      .index_left_wapper
        position fixed
        width 90px
        .index_left_panel
          .index_left_option
            text-align: center
            line-height 40px
            border-top 1px solid #dddddd
            font-size 18px
            font-weight: bold
            color #094275
            cursor: pointer
            &.inactive
              cursor not-allowed
            &.active
              border-right 2px solid #1b98cd
      .index_right_wapper
        float right
        height 100%
        width: 800px
        .index_right_logout
          color #999999
          text-align: center
          font-size 20px
        .index_right_login
          background-color: #f7f7f7
          height 100%
          padding 20px 44px
          .index_right_title
            text-align: center
            line-height: 40px
            color #094275
            border-bottom: 1px solid #e8e8e8
          .index_right_phone
            height 140px
            border-bottom: 1px solid #e8e8e8


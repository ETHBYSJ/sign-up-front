.index_main
  height 100%      
  display: flex
  flex-flow: column
  background-color: #ebebeb
  .index_container
    position relative
    flex 1
    .index_wapper
      height: 100% 
      width: 900px
      margin: 0 auto
      padding-top 24px
      .index_left_wapper
        position fixed
        width 90px
        .index_left_panel
          .index_left_option
            text-align: center
            line-height 40px
            border-top 1px solid #dddddd
            font-size 18px
            font-weight: bold
            color #094275
            cursor: pointer
            &.inactive
              cursor not-allowed
            &.active
              border-right 2px solid #1b98cd
      .index_right_wapper
        float right
        width: 790px
        .index_right_logout
          color #999999
          text-align: center
          font-size 20px
        .index_right_login
          background-color: #f7f7f7
          height 100%
          padding 15px 44px
          .index_right_login1
            height 100%
            .index_right_title
              text-align: center
              line-height: 45px
              color #094275
              border-bottom: 1px solid #e8e8e8
            .index_right_phone
              height 140px
              padding 55px 110px
              border-bottom: 1px solid #e8e8e8
              font-size 14px
              line-height 26px
              .index_right_num
                float left
                border 2px solid #f7f7f7
                width 300px
              .index_right_btn
                float right
                width 64px
                text-align: center
                border 2px solid green
                border-radius: 8px
                font-weight: bold
                color #094275
                cursor pointer
                &:hover
                  opacity: 0.8
            .index_right_input
              padding 24px 110px
            .index_right_next_box
              height: 100px
              padding 40px 0 30px
              .index_right_next_btn
                background-color: #094275
                height 30px
                width 60px
                line-height: 30px
                font-size 13px
                border-radius: 4px
                text-align: center
                color white
                margin 0 auto
                box-shadow: 1px 1px 3px 0px #cccccc
                cursor pointer
                &:hover
                  opacity: 0.8

